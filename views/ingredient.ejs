<%- include("partials/header.ejs") %>

<% if(locals.ingredient) { %>
    <img src="https://www.thecocktaildb.com/images/ingredients/<%= ingredient.strIngredient %>-Medium.png" alt="">

    <h1 class="h1 border-bottom border-primary pb-2 mb-4"><%= ingredient.strIngredient %></h1>
    <p class="fs-5"><span class="h1 fs-5">Type:</span> <%= ingredient.strType %></p>
    <p class="fs-5"><span class="h1 fs-5">Alcoholic:</span> <%= ingredient.strAlcohol %></p>
    <div class="description">
      <%= ingredient.strDescription %>
    </div> 
<% } %>

<form action="/drinkInfo" method="post">
    <button class="btn btn-primary" type="submit">Back</button>
</form>

<script src="js/ingredient.js"></script>

<%- include("partials/footer.ejs") %>